<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       
        android:background="#7c7c7c" >

        <RadioButton
            android:id="@+id/wodexiaoxi_fanhui"
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/wode_title_btn_selector"
            android:button="@null"
            android:drawableLeft="@drawable/fanhui"
            android:gravity="left|center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#fbfdfc"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="地址管理"
            android:textColor="#fbfdfc"
            android:textSize="22sp" />
<!-- 
        <Button
            android:id="@+id/button1"
            android:layout_marginTop="5dp"
            android:layout_width="80dp"
            android:layout_marginLeft="5dp"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="编辑" />
 -->
           
           

    </RelativeLayout>

    
    
    <LinearLayout
        android:layout_weight="6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/dizhiguanli_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>
       
    </LinearLayout>
    
    
    
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/sel"
            android:id="@+id/tianjiadizhi_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="添加收货地址" />
        
    </LinearLayout>

</LinearLayout>
