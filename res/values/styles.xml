<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
   

    <style name="basedialog" parent="@android:style/Theme.Dialog">
        
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/halftransparent</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
        
        
    </style>
    
    <style name="dialog" parent="basedialog">
        
      
        <item name="android:layout_marginLeft">40dp</item>
    </style>

    
    <style name="main_bottom_radoibtn">
        
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
         <item name="android:layout_weight">1</item>
         <item name="android:paddingTop">2dp</item>
          <item name="android:textSize">12sp</item>
          <item name="android:background">@drawable/radio_group_selector</item>
          <item name="android:gravity">center_horizontal</item>
          <item name="android:button">@color/transparent</item>
        <item name="android:textColor">@color/color_radiobutton</item>
    </style>
    
    
	 
    <style name="dialoganim" parent="android:Animation">   
        
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>  //进入时的动画   
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>    //退出时的动画   
    </style>  
    
    
    
    
    
</resources>